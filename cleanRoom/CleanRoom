<body>

  <div style="font-size: 60px; margin-bottom: 10px;">üè°</div>
  <h1>Lending Your Mess A Hand</h1>

  <div class="slider-container">
    <span style="font-size: 30px;">üóëÔ∏è</span>
    <input type="range" id="thresholdSlider" min="1" max="10" value="5">
    <span style="font-size: 30px;">‚ù§Ô∏è</span>
  </div>
  <div style="margin-bottom: 20px; font-size: 18px;">Set how many points to keep</div>

  <div class="slider-container">
    <span style="font-size: 28px;">üóëÔ∏è</span>
    <input type="range" id="tieBreakerSlider" min="0" max="1" value="1" class="small-slider">
    <span style="font-size: 28px;">‚ù§Ô∏è</span>
  </div>
  <div style="margin-bottom: 20px; font-size: 16px;">Set what happens when you get 5 points</div>

  <div class="progress-container">
    <div class="progress-bar" id="progressBar"></div>
  </div>

  <div id="quiz">
    <div class="question" id="question">Let's get started! Is the item useful in your daily life? üß∞</div>
    <div class="options" id="options">
      <button onclick="nextQuestion('‚úÖ Yes')">‚úÖ Yes</button>
      <button onclick="nextQuestion('‚ùå No')">‚ùå No</button>
    </div>
  </div>

  <div class="result" id="result"></div>

  <script>
    let stage = 0;
    let path = [];
    let totalPoints = 0;

    // Sounds
    const yesSound = new Audio('https://cdn.pixabay.com/audio/2022/03/15/audio_90cd96291e.mp3'); // Happy sound
    const noSound = new Audio('https://cdn.pixabay.com/audio/2022/03/15/audio_2ab64fd9ee.mp3');  // Boop sound
    const sliderSound = new Audio('https://cdn.pixabay.com/audio/2022/03/15/audio_c213b97fb8.mp3'); // slider move

    const questions = [
      { 
        question: "Is the item useful in your daily life? üß∞",
        options: [
          { text: "‚úÖ Yes", points: 1 }, 
          { text: "‚ùå No", points: 0 }
        ]
      },
      {
        question: "Does it bring you happiness or positive memories? ‚ù§Ô∏è",
        options: [
          { text: "Yes!", points: 1 }, 
          { text: "Not really", points: 0 }
        ]
      },
      {
        question: "Have you used it in the last 6 months? ‚è≥",
        options: [
          { text: "Yes", points: 1 }, 
          { text: "No", points: 0 }
        ]
      },
      {
        question: "Would you buy it again today if you didn't own it? üõí",
        options: [
          { text: "Absolutely", points: 1 }, 
          { text: "Probably not", points: 0 }
        ]
      },
      {
        question: "Is it in good condition? ‚ú®",
        options: [
          { text: "Perfect", points: 1 }, 
          { text: "Damaged", points: 0 }
        ]
      },
      {
        question: "Does it have real monetary value? üíµ",
        options: [
          { text: "Yes", points: 1 }, 
          { text: "No", points: 0 }
        ]
      },
      {
        question: "Is it unique, rare, or hard to replace? üåü",
        options: [
          { text: "Unique", points: 1 }, 
          { text: "Common", points: 0 }
        ]
      },
      {
        question: "Is someone else likely to appreciate or need it more? üéÅ",
        options: [
          { text: "Yes", points: 0 }, 
          { text: "No", points: 1 }
        ]
      },
      {
        question: "Does it clutter your space without adding value? üì¶",
        options: [
          { text: "Yes", points: 0 }, 
          { text: "No", points: 1 }
        ]
      },
      {
        question: "Would letting it go improve your room's vibe? ‚ú®",
        options: [
          { text: "Definitely", points: 0 }, 
          { text: "Not really", points: 1 }
        ]
      }
    ];

    function nextQuestion(answer) {
      if (answer.includes('Yes') || answer.includes('‚úÖ')) {
        yesSound.currentTime = 0;
        yesSound.play();
      } else {
        noSound.currentTime = 0;
        noSound.play();
      }

      const currentQuestion = questions[stage];
      const selectedOption = currentQuestion.options.find(option => option.text === answer);
      totalPoints += selectedOption.points;
      path.push(selectedOption.points);

      stage++;
      updateQuiz();
    }

    function goBack() {
      yesSound.currentTime = 0;
      yesSound.play();
      if (stage > 0) {
        stage--;
        totalPoints -= path.pop();
        updateQuiz();
      }
    }

    function updateQuiz() {
      const questionDiv = document.getElementById('question');
      const optionsDiv = document.getElementById('options');
      const resultDiv = document.getElementById('result');
      const progressBar = document.getElementById('progressBar');

      progressBar.style.width = ((stage / questions.length) * 100) + "%";

      if (stage < questions.length) {
        questionDiv.textContent = questions[stage].question;
        optionsDiv.innerHTML = "";
        questions[stage].options.forEach(option => {
          optionsDiv.innerHTML += `<button onclick="nextQuestion('${option.text}')">${option.text}</button>`;
        });

        if (stage > 0) {
          optionsDiv.innerHTML += `<button class="back-button" onclick="goBack()">‚¨ÖÔ∏è Back</button>`;
        }
      } else {
        const threshold = parseInt(document.getElementById('thresholdSlider').value);
        const tieBreaker = parseInt(document.getElementById('tieBreakerSlider').value);

        let decision = "";

        if (totalPoints > threshold) {
          decision = "Keep it! üè°";
        } else if (totalPoints < threshold) {
          decision = "Let it go! üóëÔ∏è";
        } else {
          decision = tieBreaker === 1 ? "Keep it! üè°" : "Let it go! üóëÔ∏è";
        }

        resultDiv.innerHTML = `
          Result: ${decision}<br><br>Total Points: ${totalPoints}
          <br><br>
          <button class="restart-button" onclick="location.reload()">üîÑ Restart</button>
        `;
        questionDiv.style.display = "none";
        optionsDiv.style.display = "none";
      }
    }

    // Play sound when sliders move
    document.getElementById('thresholdSlider').addEventListener('input', () => {
      sliderSound.currentTime = 0;
      sliderSound.play();
    });
    document.getElementById('tieBreakerSlider').addEventListener('input', () => {
      sliderSound.currentTime = 0;
      sliderSound.play();
    });
  </script>

</body>
