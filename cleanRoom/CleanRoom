<body>

    <div style="font-size: 60px; margin-bottom: 10px;">üè°</div>
    <h1>Room Item Decision Helper</h1>

    <div class="progress-container">
        <div class="progress-bar" id="progressBar"></div>
    </div>

    <div id="quiz">
        <div class="question" id="question">Let's get started! Is the item useful in your daily life? üß∞</div>
        <div class="options" id="options">
            <button onclick="nextQuestion('yes')">‚úÖ Yes</button>
            <button onclick="nextQuestion('no')">‚ùå No</button>
        </div>
    </div>

    <div class="result" id="result"></div>

    <script>
        let stage = 0;
        let path = [];

        const questions = [
            { 
                question: "Is the item useful in your daily life? üß∞",
                options: ["‚úÖ Yes", "‚ùå No"]
            },
            {
                question: "Does it bring you happiness or positive memories? ‚ù§Ô∏è",
                options: ["Yes!", "Not really"]
            },
            {
                question: "Have you used it in the last 6 months? ‚è≥",
                options: ["Yes", "No"]
            },
            {
                question: "Would you buy it again today if you didn't own it? üõí",
                options: ["Absolutely", "Probably not"]
            },
            {
                question: "Is it in good condition? ‚ú®",
                options: ["Perfect", "Damaged"]
            },
            {
                question: "Does it have real monetary value? üíµ",
                options: ["Yes", "No"]
            },
            {
                question: "Is it unique, rare, or hard to replace? üåü",
                options: ["Unique", "Common"]
            },
            {
                question: "Is someone else likely to appreciate or need it more? üéÅ",
                options: ["Yes", "No"]
            },
            {
                question: "Does it clutter your space without adding value? üì¶",
                options: ["Yes", "No"]
            },
            {
                question: "Would letting it go improve your room's vibe? ‚ú®",
                options: ["Definitely", "Not really"]
            }
        ];

        function nextQuestion(answer) {
            path.push(answer);
            stage++;
            updateQuiz();
        }

        function updateQuiz() {
            const questionDiv = document.getElementById('question');
            const optionsDiv = document.getElementById('options');
            const resultDiv = document.getElementById('result');
            const progressBar = document.getElementById('progressBar');

            progressBar.style.width = ((stage / questions.length) * 100) + "%";

            if (stage < questions.length) {
                questionDiv.textContent = questions[stage].question;
                optionsDiv.innerHTML = "";
                questions[stage].options.forEach(option => {
                    optionsDiv.innerHTML += `<button onclick="nextQuestion('${option}')">${option}</button>`;
                });
            } else {
                // Decision Logic
                let keepPoints = 0;
                let sellPoints = 0;
                let givePoints = 0;
                let throwPoints = 0;

                path.forEach(answer => {
                    if (answer.includes("Yes") || answer.includes("Absolutely") || answer.includes("Perfect") || answer.includes("Unique") || answer.includes("No")) {
                        keepPoints++;
                    }
                    if (answer.includes("Damaged") || answer.includes("Not really") || answer.includes("Common") || answer.includes("No")) {
                        throwPoints++;
                    }
                    if (answer.includes("Someone else") || answer.includes("üéÅ")) {
                        givePoints++;
                    }
                    if (answer.includes("Monetary") || answer.includes("üíµ")) {
                        sellPoints++;
                    }
                });

                document.getElementById('quiz').style.display = 'none';
                if (keepPoints >= 7) {
                    resultDiv.innerHTML = "‚ù§Ô∏è Keep it! It sparks joy and has value!";
                } else if (sellPoints >= 3) {
                    resultDiv.innerHTML = "üíµ Sell it! Make some money for something you really love!";
                } else if (givePoints >= 3) {
                    resultDiv.innerHTML = "üéÅ Give it away! Someone else will appreciate it.";
                } else {
                    resultDiv.innerHTML = "üóëÔ∏è Time to throw it away or recycle it!";
                }
            }
        }
    </script>

